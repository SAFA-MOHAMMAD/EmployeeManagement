@model HomeEditViewModel

@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/Images/" + (string.IsNullOrEmpty(Model.ExistingPhotoPath) ? "noimage.jpg" : Model.ExistingPhotoPath);
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="m-3">
 <div asp-validation-summary="All" class="text-danger">

     </div>
     <input hidden asp-for="Id"/>
     <input hidden asp-for="ExistingPhotoPath"/>

    <div class="form-group row mt-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name"/>
            <span asp-validation-for="Name" class="text-danger"> </span>
        </div>
    </div>
    <div class ="form-group row mt-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"> </span>
        </div>
    </div>
    <div class ="form-group row mt-3">
        <label asp-for="DepartmentId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-select mr-sm-2">
                   @* <option value=""> Please Select</option>*@
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>
      <div class ="form-group row mt-3">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control custom-file-input" />
        </div>
    </div>

    <div class="form-group row m-3">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true"/>
    </div>
    <div class="form-group row mt-3">
   <div class ="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
    </div>
    </div>

</form>

