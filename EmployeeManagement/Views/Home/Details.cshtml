@model HomeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Emploeey.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail " src="~/images/noimage.jpg" />
                <h4>Employee ID : @Model.Emploeey.Id</h4>
                <h4>Email : @Model.Emploeey.Emil</h4>
                <h4>Department : @Model.Emploeey.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}